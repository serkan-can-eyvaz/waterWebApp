pipeline {
    agent any

    environment {
        IMAGE_NAME = "aquashare-frontend"
        CONTAINER_NAME = "aquashare-frontend"
        GIT_CREDENTIALS_ID = "0b91579b-700e-4d1d-a0cf-0d55386b088f"
        GIT_REPO = "git@github.com:serkan-can-eyvaz/waterWebApp.git"
    }

    stages {
        stage('Checkout') {
            steps {
                sshagent (credentials: ["${GIT_CREDENTIALS_ID}"]) {
                    git branch: 'main', url: "${GIT_REPO}"
                }
            }
        }

        stage('Build Frontend') {
            steps {
                dir('front-end') {
                    sh "npm install"
                    sh "npm run build"
                }
            }
        }

        stage('Check Build Output') {
            steps {
                dir('front-end') {
                    sh 'ls -la'
                }
            }
        }

        stage('Copy Build to AquaShare Directory') {
            steps {
                dir('front-end') {
                    // AquaShare için ayrı dizin oluştur ve build çıktısını kopyala
                    sh '''
                mkdir -p /home/waterWebApp/frontend_build
                cp -r build/* /home/waterWebApp/frontend_build/

                    '''
                }
            }
        }
    } // stages bloğu sonu

    post {
        success {
            echo "AquaShare Frontend build ve kopyalama işlemi tamamlandı!"
            echo "Backend API: http://localhost:9095"
            echo "Frontend: http://localhost:80"
        }
        failure {
            echo "AquaShare Frontend build veya kopyalama başarısız!"
        }
    }
}