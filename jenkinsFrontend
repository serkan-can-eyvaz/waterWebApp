pipeline {
    agent any

    environment {
        IMAGE_NAME = "aquashare-frontend"
        CONTAINER_NAME = "aquashare-nginx"
        GIT_CREDENTIALS_ID = "0b91579b-700e-4d1d-a0cf-0d55386b088f"
        GIT_REPO = "git@github.com:serkan-can-eyvaz/waterWebApp.git"
        DEPLOY_DIR = "/home/waterWebApp"
    }

    stages {
        stage('Checkout') {
            steps {
                sshagent (credentials: ["${GIT_CREDENTIALS_ID}"]) {
                    git branch: 'main', url: "${GIT_REPO}"
                }
            }
        }

        stage('Build Frontend') {
            steps {
                dir('front-end') {
                    sh "npm install"
                    sh "npm run build"
                }
            }
        }

        stage('Check Build Output') {
            steps {
                dir('front-end') {
                    sh 'ls -la'
                }
            }
        }

        stage('Copy Frontend Build to Deploy Directory') {
            steps {
                script {
                    sh """
                    # Gerekli dizinleri oluştur
                    mkdir -p ${DEPLOY_DIR}/frontend_build

                    # Build çıktısını home dizinine kopyala
                    rsync -av --delete ${WORKSPACE}/front-end/build/ ${DEPLOY_DIR}/frontend_build/
                    """
                }
            }
        }

        stage('Clean Docker') {
            steps {
                script {
                    sh "docker container prune -f"
                    sh "docker image prune -af"
                    sh "docker volume prune -f"
                }
            }
        }

        stage('Deploy with Docker Compose') {
            steps {
                dir("${DEPLOY_DIR}") {
                    script {
                        sh "docker compose down"
                        sh "docker compose up -d"
                    }
                }
            }
        }
    } // stages bloğu sonu

    post {
        success {
            echo "AquaShare Frontend build ve deploy işlemi tamamlandı!"
            echo "Frontend: http://localhost:80"
        }
        failure {
            echo "Frontend build veya deploy başarısız!"
        }
    }
}
